<% flash.each do |type, msg| %>
  <div aria-live="polite"
       aria-atomic="true"
       class="position-relative transition transform duration-1000 hidden"
       data-controller="notification"
       data-notification-delay-value="2000"
       data-transition-enter-from="opacity-0 translate-x-6"
       data-transition-enter-to="opacity-100 translate-x-0"
       data-transition-leave-from="opacity-100 translate-x-0"
       data-transition-leave-to="opacity-0 translate-x-6"
  >
    <div class="toast-container top-0 end-0 p-3">
      <div class="text-bg-<%= notice_type(type) %> fade show toast align-items-center top-0 end-0"
           role="alert"
           aria-live="assertive"
           aria-atomic="true"
      >
        <div class="d-flex">
          <div class="toast-body">
            <%= msg %>
          </div>

          <button type="button"
                  class="btn-close me-2 m-auto"
                  data-bs-dismiss="alert"
                  aria-label="Close"
                  data-action="notification#hide"
          ></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
